groups:
- name: mongodb
  rules:

  - alert: service_down
    expr: mongodb_instance_uptime_seconds == 0
    for: 5m
    labels:
      severity: high
      tag: cmsweb
      service: mongodb
      kind: database
    annotations:
      summary: "mongodb {{ $labels.env }} is down"
      description: "{{ $labels.env }} has been down for more than 5m"
